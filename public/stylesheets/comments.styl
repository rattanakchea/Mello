.new-comment
  .member
    position: absolute
    top: 1px
    left: -38px

.member-no-menu
  cursor: default

.member
  background-color: #D6DADC
  background-image: url('/images/sprite.png')
  background-position: -30px 0
  border-radius: 3px
  color: #4d4d4d
  display: block
  float: left
  height: 30px
  margin: 0 4px 4px 0
  overflow: hidden
  position: relative
  width: 30px
  user-select: none
  z-index: 0
  
.comment-frame
  background-color: #fff
  border-radius: 3px
  box-shadow: 0 1px 2px rgba(0,0,0,.23)
  margin: 4px 4px 9pt 0
  .comment-box
    position: relative
    .comment-box-input
      background: 0 0
      height: 75px
      margin: 0
      min-height: 75px
      padding: 9px 11px 0
      width: 100%
      resize: none
      border: none
      &:focus
      &:active
        outline: 0

.comment-controls
  margin-top: 8px
  
.notification-wrapper
  &:last-child
    .phenom
      border-bottom: 0
      padding-bottom: 0

.phenom
  border-bottom: 1px solid #D2D4D6
  margin-left: 38px
  min-height: 30px
  padding: 10px 0
  position: relative
  &:last-child
    border-bottom: 0
    padding-bottom: 0
  .comment-box
    display: none
  &.mod-other-type
    min-height: 18px
  .phenom-creator
    height: 30px
    left: -38px
    position: absolute
    top: 13px
    width: 30px
  .phenom-desc
    display: block
    word-wrap: break-word
  
.phenom-meta
    font-size: 9pt
    margin: 0
    min-width: 110px

.u-font-weight-bold
  font-weight: 700

.action-comment
  word-wrap: break-word
  cursor: auto
  background-color: #fff
  border-radius: 3px
  box-shadow: 0 1px 2px rgba(0,0,0,.23)
  -moz-box-sizing: border-box
  box-sizing: border-box
  clear: both
  cursor: pointer
  display: inline-block
  margin: 6px 2px 6px 0
  overflow: hidden
  text-overflow: ellipsis
  max-width: 100%
  .current-comment
    padding: 9px 11px
  p
    text-overflow: ellipsis
    word-wrap: break-word
    &:last-child
      margin-bottom: 0
