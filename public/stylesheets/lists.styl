#lists
  display: flex
  height: 100%
  .list
    margin: 0 5px
    width: 270px
    background: #E2E4E6
    border-radius: 3px
    box-sizing: border-box
    display: flex
    -webkit-flex-direction: column
    -ms-flex-direction: column
    flex-direction: column
    max-height: 100%
    position: relative
    white-space: normal
    &:first-child
      margin-left: 10px
     .open-card-composer
      padding: 10px 15px
      color: rgb(77, 77, 77)
      &:hover
        background-color: #CDD2D4
        color: #4d4d4d
        text-decoration: underline
    .list-header
      display: flex
      flex: 0 0 auto
      padding: 8px 10px
      position: relative
      min-height: 18px
      .list-header-target
        cursor: pointer
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        &.is-hidden
          display: none
      textarea
        box-sizing: border-box
        background: 0 0
        border: none
        border-radius: 3px
        box-shadow: none
        font-weight: 700
        font-size: 14px
        height: 18px
        min-height: 18px
        padding: 3px 5px
        resize: none
        max-height: 16pc
        flex-grow: 1
        &:focus
          background-color: rgba(255,255,255,.85)
          outline: 0
      .list-hamburger
      .js-list-subscribed
        display: block
        padding: 4px
        height: 18px
        width: 18px
        text-align: center
        &:hover
          border-radius: 3px
          background: #CDD2D4
        .list-icon
          font-size: 14px
          color: #444
          width: 100%
          height: 100%
          display: block
          position: relative
          bottom: 4px

.list-extras
  display: flex
  right: 4px
  top: 4px
  
.card-composer
  flex: 1 1 auto
  overflow-y: auto
  margin: 0 4px
  padding: 0 4px 8px