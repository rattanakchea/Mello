.list-card
  background-color: #fff
  border-radius: 3px
  max-width: 300px
  min-height: 20px
  position: relative
  z-index: 0
  padding: 6px 6px 2px 8px
  textarea
    background: 0 0
    height: 100%
    width: 100%
    border: none
    box-shadow: none
    height: auto
    margin-bottom: 4px
    max-height: 162px
    min-height: 54px
    overflow-y: auto
    padding: 0
    &.focus
      background-color: #E2E4E6
      border: 1px solid #CDD2D4
    &:focus
    &:active
      outline: 0

.cards
  flex: 1 1 auto
  overflow-y: auto
  margin: 0 4px
  padding: 0 4px
  z-index: 1
  min-height: 10px
  
.card
  background-color: #fff
  border-bottom: 1px solid #ccc
  border-radius: 3px
  cursor: pointer
  margin-bottom: 6px
  max-width: 300px
  min-height: 20px
  position: relative
  z-index: 0
  &:hover
    background-color: #EDEFF0
    border-bottom-color: #D6DADC
    .card-edit-icon
      visibility: visible
      &:hover
        background-color: #D6DADC
    background-position: -552px -87px
    
.card-edit-icon
  background: url('/images/sprite.png') -552px -105px
  background-color: #EDEFF0
  background-clip: padding-box
  background-origin: padding-box
  border-radius: 3px
  opacity: .8
  padding: 4px
  position: absolute
  right: 3px
  top: 3px
  height: 18px
  width: 18px
  visibility: hidden
  z-index: 40

.card-details
  overflow: hidden
  padding: 6px 6px 2px 8px
  position: relative
  z-index: 10
  
.card-title
  clear: both
  font-weight: 400
  margin: 0 0 4px
  overflow: hidden
  word-wrap: break-word
  color: #4d4d4d
  display: block

.quick-card-editor
  background: rgba(0,0,0,.6)
  bottom: 0
  color: #fff
  left: 0
  position: fixed
  right: 0
  top: 0
  z-index: 80
  .close-icon
    color: rgba(255,255,255,.6)
    padding: 9px
    position: absolute
    right: 0
    top: 0
    -webkit-transition-property: -webkit-transform,color
    transition-property: transform,color
    -webkit-transition-duration: 150ms
    transition-duration: 150ms
  .quick-card-edit-box
    position: absolute
    width: 254px
